<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @file_upload.name %>
</p>

<% if @file_upload.files.attached? %>
<!-- @post.image.present? will always return true, use attached? to check presence -->
  <p>
    <strong>Files:</strong>
    <br>
    <% @file_upload.files.each do |file| %>
    <%= link_to 'Download', file, download: '' %>
    <% end %>
  </p>
<% end %>

<%= link_to 'Edit', edit_file_upload_path(@file_upload) %> |
<%= link_to 'Back', file_uploads_path %>
