<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @file_upload.name %>
</p>

<% if @file_upload.file.attached? %>
<!-- @post.image.present? will always return true, use attached? to check presence -->
  <p>
    <strong>File:</strong>
    <br>
    <%= link_to 'Download', @file_upload.file, download: '' %>
  </p>
<% end %>

<%= link_to 'Edit', edit_file_upload_path(@file_upload) %> |
<%= link_to 'Back', file_uploads_path %>
